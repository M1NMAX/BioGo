<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/catalogListView_image"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:scaleType="centerCrop" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/catalogListView_specieName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:padding="8dp" />

            <TextView
                android:id="@+id/catalogListView_classification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Classification: "
                android:padding="8dp" />

            <TextView
                android:id="@+id/catalogListView_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Date"
                android:textSize="12sp"
                android:textStyle="italic" />
            <ImageView
                android:id="@+id/catalogListView_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_hourglass_empty_24"/>


        </LinearLayout>
        <TextView
            android:id="@+id/catalogListView_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="Address: " />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>